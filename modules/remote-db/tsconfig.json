{
  "compilerOptions": {
    "rootDir": "./src/",
    "baseUrl": "./",
    "moduleDetection": "force",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
  },
  "include": [
    "./src",
    "./types",
  ],
}
